
<h1>Factories</h1>

<% if user_signed_in? %>
  <%= button_to "logout", destroy_user_session_path, method: :delete  %>
<% else %>
  <%= link_to "Get Started", user_session_path %>
<% end %>

<div id="factories">
  <% @factories.each do |factory| %>
    <%= render factory %>
    <p>
      <%= link_to "Show this factory", factory %>
    </p>
  <% end %>
</div>

<%= link_to "New factory", new_factory_path %>


